@page
@model Homework5_Solution.Pages.AddProductModel

@{
    ViewData["Title"] = "Add Product";
}
<h1>Add Product</h1>

<hr>
<form method="post">
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Product.Name" class="form-label"></label>
            <input asp-for="Product.Name" class="form-control">
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Product.Description" class="form-label"></label>
            <textarea asp-for="Product.Description" class="form-control"></textarea>
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Product.Price" class="form-label"></label>
            <input asp-for="Product.Price" class="form-control">
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Product.ImageURL" class="form-label"></label>
            <input asp-for="Product.ImageURL" class="form-control" value="img/placeholder.jpg">
            <span asp-validation-for="Product.ImageURL" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}